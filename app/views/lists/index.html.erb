  <div class='index-header'>
    <h1>What To Watch..</h1>
    <p><%= link_to "Go to your lists", lists_path(anchor: "lists-anchor")%></p>
  </div>
  <div class='index-main'>
    <h2>Your lists</h2>
    <p><%= link_to "Create a new movie list", list_path(:new)%>
  </div>
  <div class='list-card-box'>
    <div class='list-cards' id='lists-anchor'>
      <% @lists.each do |list| %>
        <div class='list-card'   style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, widths: 300, crop: :fill %>')">
          <p><%= link_to list.name, list_path(list) %></p>
        </div>
      <% end %>
    </div>
  </div>
