<h1><%= @list.name %>
<%@list.movies.each do |movie|%>
<p><%= movie.title %></p>
<p><%= movie.overview %></p>
<p><%= movie.rating %></p>
<img src="<%= movie.poster_url%>">
<% @bookmark = Bookmark.find_by(movie: movie, list: @list) %>
<p><%= link_to "Delete", bookmark_path(@bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
<% end %>
<br>
<%= render "bookmarks/new", list: @list, bookmark: @bookmark %>
<br>
<p><%= link_to "Home", lists_path %></p>
